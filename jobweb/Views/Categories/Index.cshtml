@model IEnumerable<jobweb.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>قائمة الوظائف</h2>

<p>
    @Html.ActionLink("العودة للقائمة", "Create",null,new {@class="btn btn-danger" })
</p>
<table class="table table-striped table-bordered table-hover">
    
        <tr class="table-danger">
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categoryDescription)
            </th>
            <th></th>
        </tr>
         
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryDescription)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "text-danger" })
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "text-danger" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "text-danger" })
                </td>
            </tr>
        }

</table>
