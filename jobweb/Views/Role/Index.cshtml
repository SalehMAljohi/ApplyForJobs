@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
   
 <h1>
        قائمة القواعد
    </h1>
<p>
    @Html.ActionLink("اضافة قاعدة جديدة", "Create",null, new { @class = "btn btn-danger" })
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayName("اسم الصلاحية")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "text-danger" })    |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.Id }, new { @class = "text-danger" })  |
            @Html.ActionLink("حذف", "Delete", new { id=item.Id }, new { @class = "text-danger" })     
        </td>
    </tr>
}

</table>
