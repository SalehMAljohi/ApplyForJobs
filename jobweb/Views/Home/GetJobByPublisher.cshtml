@model IEnumerable<jobweb.Models.JobsViewModel>

@foreach (var gr in Model)
{
    <h3>
        @gr.JobName
    </h3> 
    <table class="table table-bordered table-hover">
        <tr class="bg-danger">
          <th>
اسم الباحث 
            </th>
            <th>
نص الرسالة
            </th>
            <th>
تاريخ الارسال
            </th>
                   </tr>

        @foreach (var item in gr.Items)
        {
            <tr >
            
                <td>
                    @item.user.UserName
                </td>
                <td>
                    @item.Message
                </td>
                <td>
                    @item.ApplyDate
                </td>
            </tr>
        }

    </table>
}