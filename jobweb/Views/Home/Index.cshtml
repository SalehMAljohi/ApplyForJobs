@model IEnumerable<jobweb.Models.Category>

@{
    ViewBag.Title = "Home Page";
}
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
<div class="jumbotron alert-danger">
    <h1>مرحبا</h1>
    <p class="lead">مرحبا بكل الزوار والناشرين </p>
    <p><a href="https://asp.net" class="btn btn-danger btn-lg">للمزيد من التفاصيل &raquo;</a></p>
</div>
@foreach (var item in Model)
{
    <div class="panel panel-default">
        <h3 class="panel-heading alert-danger">@item.CategoryName</h3>
        <div class="row panel-body">
            <h4>@item.categoryDescription</h4>
            @foreach (var subitem in item.Jobs)
            {
        <div class="col-md-4 thumbnail" style="margin-left:20px;margin-bottom:30px;">
            <img src="~/Uploads/@Html.DisplayFor(m => subitem.JobImage)" style="width: auto;height: 300px; " />
            <h4>@subitem.JobName</h4>
            @Html.Raw(HttpUtility.HtmlDecode(Html.Display(@subitem.JobContent).ToString()))
            @*<h5>@subitem.JobContent</h5>*@
            @Html.ActionLink("التقديم السريع", "Details", new { JobId = subitem.Id }, new { @class = "btn btn-danger" })
        </div>
            }
        </div>
    </div>
}


<script >
    CKEDITOR.replace("JobContent")
</script>