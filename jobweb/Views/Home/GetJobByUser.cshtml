@model IEnumerable<jobweb.Models.ApplyForJob>

@{
    ViewBag.Title = "Getf";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>جميع الوظائف التي تقدمت اليها</h2>

<p>
    @Html.ActionLink("تقديم على وظيفة اخرى", "Index",null,new {@class="btn btn-danger" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.jobs.JobName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyDate)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.jobs.JobName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplyDate)
            </td>


            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.Id },new {@class="text-danger" }) |
                @Html.ActionLink("تفاصيل", "DetailsOfJob", new { id = item.Id },new {@class="text-danger" }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id },new {@class="text-danger" })
            </td>
        </tr>
    }

</table>
